@model IEnumerable<Project_Test.Models.Customers>

<div class="container p-5">
    <div class="row pt-4">
        <div class="col-6">
            <h4 class="text-success">Customer</h4>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">
                Create Name
            </a>
        </div><br /><br />
        <table class="table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="30%">@Html.DisplayFor(Model => item.Id)</td>
                    <td width="50%">@Html.DisplayFor(Model => item.Name)</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>