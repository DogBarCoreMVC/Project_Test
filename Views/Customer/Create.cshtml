@model Project_Test.Models.Customers

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h4 class="text-info pl-3">Add Category</h4>
        </div>

        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-primary w-100" value="Add Name" />
                        </div>
                        <div class="col">
                            <a asp-controller="Customer" asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
